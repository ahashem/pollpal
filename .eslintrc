{
  "parser": "babel-eslint",
  "extends": "react-app",
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-debugger": "warn",
    "max-len": [
      "error",
      {
        "code": 140
      }
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true
      }
    ],
    "camelcase": [
      "warn",
      {
        "properties": "never"
      }
    ],
    "no-underscore-dangle": "warn",
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "to"
        ]
      }
    ]
  }
}
